int trappingWater(int arr[], int n)
{    
   int l =0, r =n- 1, lmax =0, rmax =0, water= 0;  
   while(l<r)
    {
      if( arr[l] < arr[r] )
      {
       if( arr[l] > lmax)
       {
           lmax = arr[l];
       }
       else
       {
        water += ( lmax - arr[l] ); 
       }         
       l++;
      }
      else
      {
        if( arr[r] > rmax )
        {
          rmax = arr[r];   
        }
        water += ( rmax - arr[r] );
       r--;    
      }
    }
    return water;
}
